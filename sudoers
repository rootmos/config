Cmnd_Alias PACMAN = /usr/bin/pacman
Cmnd_Alias PM_CMNDS = /usr/sbin/pm-suspend, /sbin/halt, /sbin/reboot
Cmnd_Alias MOUNTS = /bin/mount, /bin/umount
Cmnd_Alias DOCKER = /usr/bin/docker, /usr/bin/docker-compose
Cmnd_Alias CRYPTSETUP = /sbin/cryptsetup

gustav ALL=(ALL) NOPASSWD: PACMAN
gustav ALL=(ALL) NOPASSWD: PM_CMNDS
gustav ALL=(ALL) NOPASSWD: MOUNTS
gustav ALL=(ALL) NOPASSWD: DOCKER
gustav ALL=(ALL) NOPASSWD: CRYPTSETUP

