#!/bin/bash

set -o nounset -o pipefail -o errexit

MARK_FILE=$HOME/.mark

FONT=Inconsolata:pixelsize=70
ACTION=output
while getopts "m:sgf:" OPT; do
    case $OPT in
        m) date --date="$OPTARG" > "$MARK_FILE" ;;
        s) rm -f "$MARK_FILE" ;;
        f) FONT=$OPTARG ;;
        g) ACTION=graphical ;;
    esac
done
shift $((OPTIND-1))

if [ ! -f "$MARK_FILE" ]; then
    exit 1
fi

if [ "$ACTION" = "graphical" ]; then
    conky --quiet --text="\${exec \"$0\"}" \
        -x 0 -y 0 \
        --interval=1 \
        --alignment=bottom_left \
        --font="$FONT"
    exit 0
fi

NOW=$(date +%s)

seconds_to_duration() {
    S=$1
    if [ "$S" -lt 0 ]; then
        SIGN=-
        S=$((-1*S))
    else
        SIGN=
    fi
    echo "$SIGN$(date -d@"$S" -u +%H:%M:%S)"
}

MARK=$(date +%s --date="$(cat "$MARK_FILE")")
seconds_to_duration "$((NOW-MARK))"
