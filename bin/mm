#!/bin/sh

PRIVATE=
WORK=
SESSION=mail
while getopts "pws:T" OPT; do
    case $OPT in
        p) PRIVATE=1; WORK= ;;
        w) PRIVATE=; WORK=1 ;;
        s) SESSION=$OPTARG ;;
        T) TMUX= ;;
        \?) echo "Invalid option: -$OPTARG" >&2; exit 2 ;;
    esac
done
shift $((OPTIND-1))

MUTT=${MUTT-$(env PATH=$(getconf PATH) which mutt)}

if [ -n "$TMUX" ]; then
    if [ -n "$PRIVATE" ]; then
        tmux select-window -t private-mail 2>/dev/null \
            || tmux new-window -n private-mail $MUTT -F ~/.mutt/rootmos.io.rc
    elif [ -n "$WORK" ]; then
        tmux select-window -t work-mail 2>/dev/null \
            || tmux new-window -n work-mail $MUTT -F ~/.mutt/arweave.org.rc
    fi
elif [ -n "$PRIVATE" ]; then
    $MUTT -F ~/.mutt/rootmos.io.rc
elif [ -n "$WORK" ]; then
    $MUTT -F ~/.mutt/arweave.org.rc
else
    exec tmux new-session -t "$SESSION"
fi
