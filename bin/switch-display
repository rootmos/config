#!/bin/bash

INTERNAL=eDP1
DP=DP2
HDMI=HDMI1

internal ()
{
    xrandr --output $DP --off --output $HDMI --off --output $INTERNAL --auto
}

dp ()
{
    xrandr --output $DP --auto --output $HDMI --off --output $INTERNAL --off
}

hdmi ()
{
    xrandr --output $DP --off --output $HDMI --auto --output $INTERNAL --off
}

choice ()
{
    cat <<EOF | dmenu
internal
dp
hdmi
EOF

}

eval $(choice)

killall dzen2
xmonad --restart
