#!/bin/bash

set -o errexit

DIR=${PASSWORD_STORE_DIR-$HOME/.password-store}

choose() {
    cd $DIR
    git ls-files -z \
       | xargs -0 -I{} echo {} \
       | grep -v '^\.' \
       | sed 's,'$DIR'/,,' \
       | sed 's/.gpg$//' \
       | sort | dmenu
}

env \
    PASSWORD_STORE_X_SELECTION=PRIMARY \
    PINENTRY_USER_DATA=gtk \
    pass --clip $(choose)
