#!/bin/bash

set -o nounset -o pipefail -o errexit

WD=$(pwd)
NOHANG=exit
while getopts "c:h-" OPT; do
    case $OPT in
        c) WD=$(readlink -f "$OPTARG") ;;
        h) NOHANG= ;;
        -) break ;;
        ?) exit 2 ;;
    esac
done
shift $((OPTIND-1))

TMP=$(mktemp -d)
trap 'rm -rf $TMP' EXIT

echo "working directory: $WD" >&2

cat <<EOF > "$TMP/dosbox.conf"
[sdl]
fullscreen = false
autolock = true

[render]
aspect = true
scaler = hq3x

[dosbox]
machine = svga_s3

[cpu]
cycles = auto

[autoexec]
MOUNT C "$WD"
C:
$@
$NOHANG
EOF

cd "$TMP"
dosbox
