source ~/.mutt/gpg.rc

folder-hook 'gmail.com' 'source ~/.mutt/gustav.behm@gmail.com.rc'
folder-hook 'rootmos.io' 'source ~/.mutt/rootmos.io.rc'
source ~/.mutt/rootmos.io.rc

macro index <f2> '<sync-mailbox><enter-command>source ~/.mutt/rootmos.io.rc<enter><change-folder>!<enter>'
macro index <f3> '<sync-mailbox><enter-command>source ~/.mutt/gustav.behm@gmail.com.rc<enter><change-folder>!<enter>'

color normal default default

set editor="vim"

set pgp_use_gpg_agent = yes

set imap_keepalive      = 30
set imap_idle
set imap_check_subscribed
unset imap_passive
unset imap_peek

set certificate_file = ~/.mutt/certificates
set move                = no

bind index - collapse-thread
bind index _ collapse-all

set sort="threads"
set sort_aux=last-date-received
set sort_re="yes"
set reply_regexp="^(re|fwd*|sv):[ \t]*"

set timeout             = 10                   # idle time before scanning
set mail_check          = 10                   # minimum time between scans

set index_format="%4C %Z %-16[%a %d %b %R] (%{%z}) %-17.17L %s"

set fast_reply=yes
set include=yes

auto_view text/html
alternative_order text/plain text/enriched text/html
set mailcap_path = ~/.mutt/mailcap

## GooBook
set query_command="goobook query '%s'"
macro index,pager a "<pipe-message>goobook add<return>" "add sender to google contacts"
bind editor <Tab> complete-query
