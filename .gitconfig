[user]
    email = me@rootmos.io
    name = Gustav Behm
    signingkey = 413B70A6B053F80C
[includeIf "gitdir:~/upvest/"]
        path = ~/upvest/.gitconfig
[commit]
    gpgsign = true
[core]
    editor = vim
    excludesfile = /home/gustav/.gitignore_global
[merge]
    tool = vimdiff
[push]
    default = simple
[alias]
    f = fetch
    a = add --interactive
    ap = add --patch
    c = commit --verbose
    ca = commit --verbose --amend
    ba = branch --sort=committerdate --all -vv
    ls = ls-files
    co = !sh -c 'git checkout -B $1 ${2-origin}/$1' -
    b = checkout -B
[color]
    ui = auto
[http]
	postBuffer = 524288000
